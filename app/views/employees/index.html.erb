<% if @active_employees.empty? %>
  <h4>There are no active managers at this time</h4>
  <h4>There are no active employees at this time</h4>
<% else %>
  <h4>Active Managers</h4>
  <table class="striped highlight">
    <thead>
      <th>Name</th>
      <th>Phone</th>
      <th>Current Assignment</th>
      <th class="align_center">Options</th>
    </thead>
    <% for employee in @active_managers %>
      <tr>
        <td><%= link_to employee.name, detail_path(employee) %></td>
        <td><%= number_to_phone employee.phone %></td>
        <% if employee.current_assignment.nil? == false %>
       <td><%= employee.current_assignment.store.name %></td>
       <% else %>
       <td>n/a</td>
       <% end %>
       <td class="align_center">
        <%= link_to 'Edit', edit_employee_path(employee) %>
        &nbsp;
        <%= link_to 'Show', employee_path(employee) %>
        &nbsp;
        <%= link_to 'Details', detail_path(employee) %>
        &nbsp;
        <%= link_to 'Delete', employee, method: delete %>
       </td>
      </tr>
    <% end %>
  </table>
  <br />
  <%= will_paginate @active_managers, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
  
  <h4>Active Employees</h4>
  <table class="striped highlight">
    <thead>
      <th>Name</th>
