<% if @active_stores.empty? %>
  <h4>There are no active stores at this time.</h4>
<% else %>
  <h4>Active Stores</h4>
  <table class="striped highlight">
    <thead>
      <th>Name</th>
      <th>City</th>
      <th>Current Assignments</th>
      <th>Phone</th>
      <th class="align_center">Options</th>
    </thead>
    <% for store in @active_stores %>
      <tr>
        <td><%= link_to store.name, store_path(store) %></td>
        <td><%= store.city %></td>
       <td><%= store.assignments.current.count %></td>
        <td><%= number_to_phone store.phone %></td>
        <td class="align_center">
          <%= link_to 'Edit', edit_store_path(store) %>
        </td>
      </tr>
    <% end %>
  </table>
  <br />
  <%= will_paginate @active_stores, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
  
   <h4>Inactive Stores</h4>
  <table class="striped highlight">
    <thead>
      <th>Name</th>
      <th>City</th>
      <th>Current Assignments</th>
      <th>Phone</th>
      <th>Active</th>
      <th class="align_center">Options</th>
    </thead>
    <% for store in @inactive_stores %>
      <tr>
        <td><%= link_to store.name, store_path(store) %></td>
        <td><%= store.city %></td>
       <td><%= store.assignments.current.count %></td>
       <% if store.active? == false %>
       <td>No</td>
       <% else %>
       <td>Yes</td>
       <% end %>
        <td><%= number_to_phone store.phone %></td>
        <td class="align_center">
          <%= link_to 'Edit', edit_store_path(store) %>
        </td>
      </tr>
    <% end %>
  </table>
  <br />
  <%= will_paginate @inactive_stores, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
  
<% end %>
<p>&nbsp;</p>

<p><strong>
<%= link_to "Add a New Store", new_store_path, class: 'waves-effect waves-light btn' %> 
</strong></p>
