<% if @jobs.empty? %>
  <h4>There are no jobs at this time</h4>
<% else %>
  <h4>Jobs</h4>
  <table class="striped highlight">
    <thead>
      <th>Job ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Active</th>
      <th class="align_center">Options</th>
    </thead>
    <% for job in @jobs %>
      <tr>
        <td><%= job.id %></td>
        <td><%= job.name %></td>
        <td><%= job.description %></td>
        <td><%= job.active %></td>

       <td class="align_center">
        <%= link_to 'Edit', edit_job_path(job) %>
        &nbsp;
        <%= link_to 'Show', job_path(job) %>
        &nbsp;
        <%= link_to 'Delete', job, method: delete %>
       </td>
      </tr>
    <% end %>
  </table>
  <br />
  <%= will_paginate @jobs, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
<% end %>
<p>&nbsp;</p>

<p><strong>
<%= link_to "Add a New Job", new_job_path, class: 'waves-effect waves-light btn' %> 
</strong></p>